<div class="container">
    <div class="leftside">
        <form method="POST" action="/editor" class="editor">
            <input type="text" class="form-input" name="formText" placeholder="Enter your text message..." value="{{originalText}}">
            <input type="submit" class="submissionBtn">
        </form>
    </div>
